{
  "name": "cmux-vscode-extension",
  "displayName": "cmux Extension",
  "description": "cmux VS Code Extension",
  "version": "0.0.1",
  "type": "module",
  "publisher": "cmux",
  "repository": {
    "type": "git",
    "url": "https://github.com/lawrencecchen/cmux"
  },
  "engines": {
    "vscode": "^1.101.2"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onStartupFinished",
    "onCommand:cmux.helloWorld",
    "onCommand:cmux.run",
    "onCommand:cmux.showOutput"
  ],
  "main": "./out/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "cmux.helloWorld",
        "title": "cmux: Hello World"
      },
      {
        "command": "cmux.run",
        "title": "cmux: Run"
      },
      {
        "command": "cmux.showOutput",
        "title": "cmux: Show Output"
      },
      {
        "command": "cmux.git.openAllChangesAgainstBase",
        "title": "cmux: Open All Changes vs Base"
      },
      {
        "command": "cmux.theme.enableSync",
        "title": "cmux: Enable Theme Sync"
      },
      {
        "command": "cmux.theme.disableSync",
        "title": "cmux: Disable Theme Sync"
      },
      {
        "command": "cmux.theme.setLight",
        "title": "cmux: Set Light Theme"
      },
      {
        "command": "cmux.theme.setDark",
        "title": "cmux: Set Dark Theme"
      },
      {
        "command": "cmux.theme.setSystem",
        "title": "cmux: Set System Theme"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile-bun",
    "compile": "bun run compile-bun",
    "compile-bun": "bun build src/extension.ts --target node --outfile ./out/extension.cjs --external vscode --minify --format cjs",
    "compile-tsc": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run compile-tsc",
    "lint": "eslint src",
    "test:todo": "echo 'TODO: enable VS Code tests later'",
    "package": "bunx @vscode/vsce package --allow-missing-repository --no-dependencies --allow-star-activation",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "@cmux/shared": "workspace:*",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.73.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.31.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.6.1"
  }
}