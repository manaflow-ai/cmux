{
  "name": "cmux",
  "version": "0.0.0",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@t3-oss/env-core": "^0.13.8",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.43.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "node-abi": "^4.14.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "monaco-editor": "^0.53.0",
    "convex": "1.27.1"
  },
  "private": true,
  "scripts": {
    "clean": "bash scripts/clean.sh",
    "clean:node_modules": "bash scripts/clean.sh",
    "precheck": "bun run generate-openapi-client",
    "check": "bun run scripts/check.ts",
    "lint": "bun run scripts/lint.ts",
    "test": "bun run scripts/test.ts",
    "typecheck": "run-p typecheck:*",
    "typecheck:client": "cd apps/client && bun run typecheck",
    "typecheck:scripts": "cd scripts && bun run typecheck",
    "typecheck:server": "cd apps/server && bun run typecheck",
    "typecheck:shared": "cd packages/shared && bun run typecheck",
    "typecheck:worker": "cd apps/worker && bun run typecheck",
    "typecheck:vscode-extension": "cd packages/vscode-extension && bun run typecheck",
    "typecheck:convex": "cd packages/convex && bun run typecheck",
    "typecheck:cmux": "cd packages/cmux && bun run typecheck",
    "typecheck:www-openapi-client": "cd packages/www-openapi-client && bun run typecheck",
    "typecheck:www": "cd apps/www && pnpm run typecheck",
    "generate-routes": "cd apps/client && bun run generate-routes",
    "generate-openapi-client": "cd apps/www && bun run generate-openapi-client",
    "build:mac-arm64-prod": "bash scripts/build-prod-mac-arm64.sh",
    "convex:deploy:prod": "(cd packages/convex && bun run deploy:prod)"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts"
  ],
  "dependencies": {
    "@git-diff-view/core": "^0.0.35",
    "@git-diff-view/react": "^0.0.35",
    "morphcloud": "^0.0.20"
  }
}
